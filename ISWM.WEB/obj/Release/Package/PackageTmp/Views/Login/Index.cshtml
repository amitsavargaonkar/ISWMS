<!-- begin::Body -->
<body class="kt-login-v2--enabled kt-quick-panel--right kt-demo-panel--right kt-offcanvas-panel--right kt-header--fixed kt-header-mobile--fixed kt-subheader--enabled kt-subheader--transparent kt-aside--enabled kt-aside--fixed kt-page--loading">

    <!-- begin:: Page -->

    <div class="kt-grid kt-grid--ver kt-grid--root">
        <div class="kt-grid__item   kt-grid__item--fluid kt-grid  kt-grid kt-grid--hor kt-login-v2" id="kt_login_v2">
            <!--begin::Item-->
            <div class="kt-grid__item  kt-grid--hor">
                <!--begin::Heade-->
                <div class="kt-login-v2__head">
                    <div class="kt-login-v2__logo">
                        <h2 style="font-weight:900;">ISWMS+</h2>
                        <!--
                                                    <a href="#">
                                                        <img src="assets/media/logos/logo-5.png" alt="" />
                                                    </a>
                        -->
                    </div>
                    <div class="kt-login-v2__signup">
                        <span>Don't have an account?</span>
                        <a href="#" class="kt-link kt-font-brand">Sign Up Here</a>
                    </div>
                </div>
                <!--begin::Head-->
            </div>
            <!--end::Item-->
            <!--begin::Item-->
            <div class="kt-grid__item  kt-grid  kt-grid--ver  kt-grid__item--fluid">
                <!--begin::Body-->
                <div class="kt-login-v2__body">
                    <!--begin::Wrapper-->
                    <div class="kt-login-v2__wrapper">
                        <div class="kt-login-v2__container">
                            <div class="kt-login-v2__title">
                                <h3>User Sign In</h3>
                            </div>
                            <!--begin::Form-->

                            @using (Html.BeginForm())
                            {

                                @Html.AntiForgeryToken()
                            <div class="kt-login-v2__form kt-form" id="kt_login_form">
                                @if (ViewBag.MessageCode != null)
                                {                                   
                                    <div class="form-group">

                                        <div class="alert alert-solid-danger alert-bold fade show" role="alert">
                                            <div class="alert-text">@ViewBag.MessageTxt</div>
                                            <div class="alert-close">
                                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                    <span aria-hidden="true"><i class="la la-close"></i></span>
                                                </button>
                                            </div>
                                        </div>
                                            @*<div class="alert alert-solid-light alert-bold fade show" role="alert">
                                            <div class="alert-text kt-font-danger">A simple danger alert—check it out!</div>
                                        </div>

                                        <div class="alert alert-info fade show" role="alert">
                                            <div class="alert-text">A simple danger alert—check it out!</div>
                                        </div>

                                        <div class="alert alert-warning fade show" role="alert">
                                            <div class="alert-text">A simple danger alert—check it out!</div>
                                        </div>*@
                                    </div>                                   
                                }

                                <div class="form-group">
                                    @*<input class="form-control" type="text" placeholder="username" name="username" autocomplete="off">*@
                                    @Html.EditorFor(model => model.user_name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Username", @name = "username", @autocomplete = "off", @required = "Required", @title = "Please Enter User Name", @oninvalid = "this.setCustomValidity('Please Enter User Name')", @oninput = "setCustomValidity('')" } })
                                </div>
                                <div class="form-group">
                                    @*<input class="form-control" type="password" placeholder="Password" name="password" autocomplete="off">*@
                                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @type = "password", @placeholder = "Password", @name = "password", @autocomplete = "off", @required = "Required", @title = "Please Enter Password", @oninvalid = "this.setCustomValidity('Please Enter Password')", @oninput = "setCustomValidity('')" } })
                                </div>
                                <!--begin::Action-->
                                <div class="kt-login-v2__actions">
                                    <a href="#" class="kt-link kt-link--brand">Forgot Password ?</a>
                                    @*<button type="submit" class="btn btn-primary" id="kt_login_submit">Sign In</button>*@
                                    <input type="submit" value="Sign In" class="btn btn-primary" />
                                </div>
                                <!--end::Action-->
                            </div>

                            }
                            <!--end::Form-->
                        </div>
                    </div>
                    <!--end::Wrapper-->
                    <!--begin::Image-->
                    <div class="kt-login-v2__image">
                        <img src="../../assets/media/misc/bg_icon.svg" alt="">
                    </div>
                    <!--begin::Image-->
                </div>
                <!--begin::Body-->
            </div>
            <!--end::Item-->
            <!--begin::Item-->
            <div class="kt-grid__item">
                <div class="kt-login-v2__footer">
                    <div class="kt-login-v2__link">
                        <a href="#" class="kt-link kt-font-brand">Privacy</a>
                        <a href="#" class="kt-link kt-font-brand">Legal</a>
                        <a href="#" class="kt-link kt-font-brand">Contact</a>
                    </div>
                    <div class="kt-login-v2__info">
                        &copy;&nbsp;&nbsp;2020&nbsp;&nbsp;<a href="#" target="_blank" class="kt-link">ISWMS</a>&nbsp;&nbsp;&bull;&nbsp;&nbsp;All rights reserved
                    </div>
                </div>
            </div>
            <!--end::Item-->

        </div>
    </div>
